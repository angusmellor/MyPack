// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int @id @default(autoincrement())
  email String
  password String?
  userItems UserItem[]
  userPacks Pack[]
}

model UserItem {
  id     Int   @id @default(autoincrement()) @unique
  user   User  @relation(fields: [userId], references: [id])
  userId Int
  item   Item  @relation(fields: [itemId], references: [id])
  itemId Int
}

model Item {
  id Int @id @default(autoincrement())
  name ItemName @relation(fields: [nameId], references: [id])
  nameId Int
  category CategoryName @relation(fields: [categoryId], references: [id])
  categoryId Int
  description String
  weight Float
  cost Float ?
  users UserItem[]
  packs PackItem[]
}

model Pack {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  trail String
  winter Boolean @default(false)
  summer Boolean @default(false)
  solo Boolean @default(true)
  group Boolean @default(false)
  female Boolean @default(false)
  packItems PackItem[]
}

model PackItem {
  id Int @id @default(autoincrement())
  pack Pack @relation(fields: [packId], references: [id])
  packId Int
  item Item @relation(fields: [itemId], references: [id])
  itemId Int

}

model CategoryName {
  id Int @id @default(autoincrement())
  category String @unique
  items Item[]
}

model ItemName {
  id Int @id @default(autoincrement())
  name String @unique
  items Item[]
}


